<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppWelcom.MainPage">


    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

            <Image
            Source="welcome.png"
            HeightRequest="200" />

            <Label
            Text="Tapez votre nom"
            FontSize="24"
            HorizontalOptions="Center" />

            <Entry x:Name="nomEntry"
            Placeholder="Votre nom"
            WidthRequest="250" />

            <Button
            x:Name="CounterBtn"
            Text="Cliquer"
            Clicked="OnCounterClicked"
            HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
